@using System.Text.Json
@model FrBaschet.Domain.ViewModels.UpdateGameViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="container">
    <div class="row">
        <div class="col-6">
            <h1 id="title_id"></h1>
            <h3 id="data_id"></h3>
            <h5 id="commissioner_id"></h5>
            <h5 id="referee1_id"></h5>
            <h5 id="referee2_id"></h5>
        </div>
        <div class="col-6">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        
                        <section>
                            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                                <h4>Choose:</h4>
                                <hr/>
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <label>Choose Commissioner</label>
                                <div class="form-group">
                                    @Html.DropDownList(
                                        "Commissioner",
                                        new SelectList(
                                            ViewBag.commissionerList,
                                            "Value",
                                            "Text"),
                                        new {style = "width: 100%;"}
                                        )
                                </div>
                                <label>Choose Refereel1</label>
                                <div class="form-group">
                                    @Html.DropDownList(
                                        "Referee1",
                                        new SelectList(
                                            ViewBag.refereeList,
                                            "Value",
                                            "Text"),
                                        new {style = "width: 100%;"}
                                        )
                                </div>
                                <label>Choose Refereel2</label>
                                <div class="form-group">
                                    @Html.DropDownList(
                                        "Referee2",
                                        new SelectList(
                                            ViewBag.refereeList,
                                            "Value",
                                            "Text"),
                                        new {style = "width: 100%;"}
                                        )
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-default">Set</button>
                                </div>
                            </form>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
var props = @Html.Raw(JsonSerializer.Serialize(ViewBag.Game))
document.addEventListener('DOMContentLoaded', function() {
    Object.keys(props).map(a=>{
        document.getElementById(a+"_id").innerHTML =props[a]
    })  
})
console.log(props)

</script>